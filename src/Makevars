STANHEADERS_SRC = \
    `"$(R_HOME)/bin$(R_ARCH_BIN)/Rscript" \
        --vanilla \
        -e "cat(system.file('include', 'src', package = 'StanHeaders'))"`
PKG_CPPFLAGS = \
    -I"../inst/include" \
    -I"$(STANHEADERS_SRC)" \
    -DBOOST_RESULT_OF_USE_TR1 \
    -DBOOST_NO_DECLTYPE \
    -DBOOST_DISABLE_ASSERTS \
    -DEIGEN_NO_DEBUG \
    -DBOOST_MATH_OVERFLOW_ERROR_POLICY=errno_on_error